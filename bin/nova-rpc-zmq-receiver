import eventlet
eventlet.monkey_patch()

import gettext
import logging
import os
import socket
import string
import sys
import time

import zmq

from nova import flags
from nova import log as logging
from nova import utils

from cloudscaling.nova.rpc import impl_zmq

# If ../nova/__init__.py exists, add ../ to Python search path, so that
# it will override what happens to be installed in /usr/(local/)lib/python...
POSSIBLE_TOPDIR = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(POSSIBLE_TOPDIR, 'nova', '__init__.py')):
    sys.path.insert(0, POSSIBLE_TOPDIR)

if __name__ == '__main__':
    utils.default_flagfile()
    flags.FLAGS(sys.argv)
    logging.setup()
    utils.monkey_patch()

    topic = "zmq_replies.%s" % socket.gethostname()
    proxy = impl_zmq.InternalContext(None)

    conn = impl_zmq.create_connection(new=True)
    conn.create_consumer(topic, proxy, fanout=False, replysvc=True)
    conn.create_consumer(topic, proxy, fanout=False)
    conn.consume_in_thread()
    conn.wait()
