import eventlet
eventlet.monkey_patch()

import contextlib
import gettext
import os
import string
import sys
import time

import zmq

from nova import flags
from nova import log as logging
from nova import rpc
from nova import utils
from nova.rpc import impl_zmq

FLAGS = flags.FLAGS

# If ../nova/__init__.py exists, add ../ to Python search path, so that
# it will override what happens to be installed in /usr/(local/)lib/python...
POSSIBLE_TOPDIR = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(POSSIBLE_TOPDIR, 'nova', '__init__.py')):
    sys.path.insert(0, POSSIBLE_TOPDIR)


if __name__ == '__main__':
    #utils.default_flagfile()
    flags.FLAGS(sys.argv)
    FLAGS.register_opts(rpc.rpc_opts)
    impl_zmq.register_opts(flags.FLAGS)
    logging.setup()
    utils.monkey_patch()

    ipc_dir = flags.FLAGS.rpc_zmq_ipc_dir

    # Create the necessary directories/files for this service.
    if not os.path.isdir(ipc_dir):
        utils.execute('mkdir', '-p', ipc_dir, run_as_root=True)
        utils.execute('chown', "%s:%s" % (os.getuid(), os.getgid()),
                      ipc_dir, run_as_root=True)
        utils.execute('chmod', '750', ipc_dir, run_as_root=True)

    with contextlib.closing(impl_zmq.ZmqProxy(flags.FLAGS)) as reactor:
        consume_in = "tcp://%s:%s" % \
            (FLAGS.rpc_zmq_bind_address,
             FLAGS.rpc_zmq_port)
        consume_out = 'inproc://zmq_reply_queue'
        consumption_proxy = impl_zmq.InternalContext(None)

        reactor.register(consumption_proxy,
                         consume_in, zmq.PULL, out_bind=True)

        reactor.consume_in_thread()
        reactor.wait()
